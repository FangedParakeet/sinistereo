<!DOCTYPE html>
<html>
<head>
  <title>Sinistereo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  

  <div id="container">
    <header>
    <h1><%= link_to "SINISTEREO", root_url %> </h1>
    </header>
    <nav>
      <ul>
        <% if session[:uid] %>
          <% if @user.user_type == "Band" %>
            <li><%= link_to "Dashboard", artist_url(@user.bands.first) %></li>
          <% end %>
          <li><%= link_to "Account", user_url(@user.id) %></li>
          <li><%= link_to "Sign Out", signout_url %></li>
        <% else %>
          <li><%= link_to "Sign In", signin_url %></li>
          <li><%= link_to "Sign Up", new_user_url %></li>
        <% end %>
      </ul>
    </nav>
    </div>
    <div class="clear"></div>
    

    <div id="content">

      <% if flash[:notice].present? %>
        <p id="notice"><%= notice %></p>
       <% end %>

<script>
	$(function() {
		$( "#premium_blend" ).accordion();
	});
	$(function() {
		$( "#playlists" ).accordion();
	});
	</script>

        <div id='premium_blend'>
          <div>
            <h3> Premium Blend </p>
            <%= @main_playlist.name %>
          </div>
          <% @main_songs.each do |m_s| %>
            <ul>
              <div>
                <li><%= m_s.name %></li>
              </div>
            </ul>
          <% end %>
        </div>

        <div id='playlists'>
          <p> My Playlists </p>
          <% if @user.present? %>
            <% @playlists.each do |playlist| %>
              <ul>
                <div>
              <h3><%= link_to playlist.name, playlist_path(playlist.id)  %></h3>
              </div>
              <% playlist.songs.each do |song| %>
              <div>
                <li><%= song.name %></li>
              </div>
              <% end %>
            </ul>
          <% end %>

        <% end %>
      </div>
 
      <%= yield %>
  </div>
</body>

</html>
