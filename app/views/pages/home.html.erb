<div class="window">
  <div class="new_playlist"></div>
  <div class="edit_playlist"></div>
  <div class="dashboard"></div>
  <div class="account"></div>
</div>

<div class="sidebar">
  <%= link_to "Add New Playlist", new_playlist_path, remote: true %>
  <% unless @playlists.empty? %>
    <h2>Playlists</h2>
      <% @playlists.each do |playlist| %>
      <%= render 'playlist_bar', playlist: playlist %>
      <% end %>
  <% end %>
</div>

<div class="main">
  Welcome
  <% if @user.name.nil? || @user.name.empty? %>
    ...sorry, <%= link_to "what was your name again?",  user_path(@user.id) %>
  <% else %> 
     <%= @user.name %>
  <% end %>
  <h2>Listen</h2>
   <section id="audio">
   </section>
  <h2>Songs</h2>
  <ul>
    <% @songs.each do |song| %>
      <li><%= link_to "#{song.name}", song.audio_url.to_s, :class => "html5" %></li>
      <li>
        <ul class="song_dis<%= song.id %>"> 
          <% @playlists.each do |playlist| %>
            <% if !playlist.songs.include?(song) %>
            <%= render 'add_playlist_to_song', :song => song, :playlist => playlist %>
            <% end %>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>