<div class="dashboard">
  <ul class="nav nav-list">
      <li>Band name: 
        <% if @artist.name.nil? %>
          Unnamed!
        <% else %>
          <%= @artist.name  %>
        <% end %></li>
      <li><%= link_to image_tag('spanner.png', size: '15x20'), edit_artist_path(@artist), remote: true %></li>
  </ul><br />
  
  <ul class="nav nav-list">
    <li>Albums</li>
    <ul class="nav nav-list">
    <% @artist.albums.each do |album| %>
      <li class="album_<%= album.id %>"><%= album.name %> |
      <%= link_to image_tag('spanner.png', size: '15x20'), edit_album_path(album.id), remote: true %> |
      <%= link_to image_tag('axe.png', size:'15x20'), album_path(album.id), :method => :delete, remote: true %></li>
      <ul class="nav nav-list", id="album_<%= album.id %>">
        <% i = 1 %>
      <% album.songs.each do |song| %>
        <li class="song_<%= song.id %>"><%= i.to_s %>. <%= song.name %> |
          <%= link_to image_tag('spanner.png', size: '15x20'), edit_song_path(song.id), remote: true %> |
          <%= link_to image_tag('axe.png', size:'15x20'), song_path(song.id), :method => :delete, remote: true %></li>
          <% i += 1 %>
      <% end %>
        <li><%= link_to "Add Song To Album", new_song_path, remote: true %></li>
      </ul>
    <% end %>
    </ul>
    <li><%= link_to 'Add New Album', new_album_path, remote: true %></li>
  </ul><br />
  <ul class="nav nav-list">
      <li>Shows</li>
      <ul class="nav nav-list">
      <% @artist.shows.each do |show| %>
        <ul class="nav nav-list", id="show_<%= show.id %>">
          <li> <%= show.date.strftime("%e/%m/%y %l:%M%p") %></li>
          <li><%= show.venue %></li>
          <li><%= show.city %></li>
          <li><%= show.country %></li>
          <li><%= link_to image_tag('spanner.png', size: '15x20'), edit_show_path(show.id), remote: true %></li>
          <li><%= link_to image_tag('axe.png', size:'15x20'), show_path(show.id), :method => :delete, remote: true %></li>
      </ul><br />
    <% end %>
    </ul>
    <li><%= link_to 'Add New Show', new_show_path, remote: true %></li>
  </ul>
</div>